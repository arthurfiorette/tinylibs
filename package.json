{
  "name": "tinylibs",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://github.com/arthurfiorette/tinylibs#readme",
  "bugs": "https://github.com/arthurfiorette/tinylibs/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arthurfiorette/tinylibs.git"
  },
  "license": "MIT",
  "author": "Arthur Fiorette <npm@arthur.place>",
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "scripts": {
    "build": "pnpm -r --aggregate-output --parallel build",
    "ci-publish": "pnpm publish -r --access public && changeset tag",
    "ci-version": "changeset version && pnpm install --no-frozen-lockfile",
    "format": "prettier --write .",
    "preinstall": "npx only-allow pnpm",
    "lint": "biome check .",
    "lint-ci": "biome ci .",
    "lint-fix": "biome check --write --unsafe .",
    "prepare": "husky",
    "test": "pnpm -r --aggregate-output --parallel test"
  },
  "devDependencies": {
    "@arthurfiorette/biomejs-config": "^2.0.1",
    "@arthurfiorette/prettier-config": "^1.0.12",
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.27.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "changesets-format-with-issue-links": "^0.3.0",
    "husky": "^9.0.11",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "^1.3.3",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9"
  }
}
